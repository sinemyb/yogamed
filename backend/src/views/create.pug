extends layout

block content
  form.create-event
    h2.create-event-title Create an event
    .input-field
      label.form-label(for='eventName') Event Name
      input#eventName.form-control(type='text')
    .input-field
      label.form-label(for='location') Location
      input#trail.form-control(type='text')
    .input-field
      label.form-label(for='startDate') Date
      input#trail.form-control(type='text')
    .input-field
      label.form-label(for='startTime') Time
      input#trail.form-control(type='text')
    button.btn.btn-primary(type='submit') Create Event 